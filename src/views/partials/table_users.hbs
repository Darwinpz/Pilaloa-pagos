<div class="table-responsive " style="margin-top: auto;">
    <table id="table_users" width="100%" cellspacing="0" class="table table-hover ">
        <thead>
            <tr>
                <th class="text-center" scope="col">Cedula</th>
                <th class="text-center" scope="col">Usuario</th>
                <th class="text-center" scope="col">Nombre</th>
                <th class="text-center" scope="col">Correo</th>
                <th class="text-center" scope="col">Tipo</th>
                <th class="text-center" scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody class="text-center">
            {{#each users}}
            <tr>
                <th scope="row">{{cedula}}</th>
                <td>{{username}}</td>
                <td>{{nombres}} {{apellidos}}</td>
                <td>{{correo}}</td>
                <td>{{tipo}}</td>
                <td><a type="button" href="/perfil/{{_id}}" class="btn btn-primary"><i class="fas fa-eye"></i></a> <a
                        type="button" class="btn btn-danger btn-eliminar" data-cedula="{{cedula}}" data-id="{{_id}}"><i class="fas fa-trash" ></i></a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.13/css/jquery.dataTables.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>

