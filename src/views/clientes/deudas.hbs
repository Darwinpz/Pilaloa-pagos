<div class="container">

    <div class="row">

        <div class="col">

            <a type="button" href="/perfil/{{cliente.id}}" class="btn btn-success btn-lg mt-3"><i
                    class="fas fa-chevron-left"></i>
                Volver</a>

        </div>

        <div class="col text-end">

            <button type="button" class="btn btn-primary btn-lg mt-3" data-bs-toggle="modal"
                data-bs-target="#modal_deuda"><i class="fas fa-dollar-sign"></i>
                Agregar Deuda</button>

        </div>

    </div>

    <div class="row mt-3">

        <div class="col">

            <div class="card" style="box-shadow: 0 2px 10px rgba(0,0,0,.075);">

                <h4 class="card-header"><b>Cliente:</b> - {{cliente.cedula}} - {{cliente.nombres}} {{cliente.apellidos}}
                    - {{cliente.correo}}</h4>

            </div>

        </div>

    </div>

    <div class="row mt-3">

        <div class="col">

            <div class="card " style="box-shadow: 0 2px 10px rgba(0,0,0,.075);">

                <h4 class="card-header"><b>Lista de Deudas</b></h4>

                <div class="card-body">

                    {{> table_deudas}}

                </div>

            </div>

        </div>

    </div>

    <div class="row mt-3 ">
        <div class="col">

            <div class="card text-end" style="box-shadow: 0 2px 10px rgba(0,0,0,.075);">
                <h4 class="card-header"><b>Total Deuda: </b>$ {{total}}</h4>

            </div>

        </div>

    </div>


    <!-- MODAL -->

    <div class="modal fade" id="modal_deuda" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title"><strong>Agregar Deuda</strong></h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <form class="row g-3" method="POST">

                        <div class="col-md-12">
                            <label class="form-label fs-5"><b>* Valor:</b></label>
                            <div class="input-group">
                                <span class="input-group-text"><strong>$</strong></span>
                                <input type="number" class="form-control fs-5" name="valor"
                                    placeholder="Valor de la deuda" required min="1" value="1">
                            </div>
                        </div>

                        <div class="col-md-12">
                            <label class="form-label fs-5"><b>* Descripción:</b></label>
                            <textarea type="text" class="form-control fs-5 " name="descripcion"
                                placeholder="Descripción de la deuda"></textarea>
                        </div>

                        <div class="col-md-12 text-end">
                            <a class="btn btn-outline-dark " data-bs-toggle="collapse" href="#avanzado"><i
                                    class="fas fa-chevron-down"></i>
                                Abonar</a>
                        </div>

                        
                        <div class="collapse row g-3" id="avanzado">

                            <div class="col-md-6 mb-2">
                                <label class="form-label fs-5"><b>Abono:</b></label>
                                <div class="input-group">
                                    <span class="input-group-text"><strong>$</strong></span>
                                    <input type="number" class="form-control fs-5" name="abono"
                                        placeholder="Abono de la deuda" min="0" value="0">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fs-5"><b>Tipo de Abono:</b></label>
                                <select class="form-select fs-5" name="tipo" required>
                                    <option disabled value="">SELECCIONA...</option>
                                    <option selected value="EFECTIVO">EFECTIVO</option>
                                    <option value="TARJETA">TARJETA</option>
                                </select>
                            </div>

                        </div>

                        <button class="btn btn-success btn-block fs-4 mb-2" type="submit"><i class="fas fa-save"></i>
                            Registrar Deuda</button>

                    </form>

                </div>
            </div>
        </div>
    </div>